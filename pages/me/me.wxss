.board {
  position: relative;
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background: #eb6100;
  color: #fff;
}
.board image:first-child {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.board image:last-child {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 0;
  right: 20rpx;
}
.board view {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-top: 40rpx;
  font-size: 16px;
}
.auth_list {
  background: #fff;
  margin-top: 50rpx;
  border-top: 1px solid #eaeaea;
  /* border-bottom: 1px solid #eaeaea; */
}
.auth_list .auth_item {
  display: flex;
  padding: 15rpx 20rpx;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  border-bottom: 1px solid #eaeaea;
}
.auth_item>view:first-child view:first-child {
  line-height: 70rpx;
  font-size: 16px;
  color: #333;
}
.auth_item>view:first-child view:last-child {
  line-height: 50rpx;
  font-size: 14px;
  color: #999;
}
.auth_item>view:last-child {
  display: flex;
  align-items: center;
  height: 100%;
}
.auth_item>view:last-child text:first-child {
  color: #eb6100;
  font-size: 16px;
}
.auth_item>view:last-child text:last-child {
  margin-left: 10rpx;
  color: #999;
  font-size: 20px;
}
