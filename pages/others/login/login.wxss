page {
  /* background: #fafafa; */
  height: 100%;
}
.img_wrap {
  text-align: center;
  padding-top: 40rpx;
}
.img_wrap image {
  margin: 0 auto;
  margin-bottom: 50rpx;
  width: 202rpx;
  height: 314rpx;
}
.form {
  padding: 0 40rpx;
}
.form .form_line {
  padding: 10rpx 0;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1px solid #ccc;
}
.form .form_line text, .form .form_line_three text {
  font-size: 24px;
  width: 50rpx;
  height: 60rpx;
  color: #999;
}
.form .form_line view {
  margin-left: 20rpx;
  width: 600rpx;
  height: 60rpx;
}
.form .form_line_three {
  /* padding: 10rpx 0; */
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1px solid #ccc;  
}
.form .form_line_three view:nth-child(2) {
  margin-left: 20rpx;
  width: 450rpx;
  height: 60rpx;
}
.form .form_line_three view:nth-child(3) {
  width: 150rpx;
  height: 60rpx;
  text-align: center;
  color: #999;
  line-height: 60rpx;
}
.btn {
  padding: 0 40rpx;
  margin-top: 20rpx;
}
.btn view {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border: none;
  background: #eb6100;
  color: #fff;
  border-radius: 60rpx;
  text-align: center;
  font-size: 18px;
}
.btn_click {
  opacity: 0.85;
}
.info_tip {
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 14px;
  color: #ff0010;
}
